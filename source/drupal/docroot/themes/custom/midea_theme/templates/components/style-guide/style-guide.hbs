<section class="style-guide" data-component="style-guide" data-scroll-component>
  <div class="block-wrapper">
    <header>
      <h1 class="heading-01">Style <em>Guide</em></h1>
      {{> general/icon/icon name='logo' className='brand-midea' }}
    </header>
    <section class="content-section">
      <h2 class="heading-02">Colours</h2>
      <div class="content-inner-section">
        <h3 class="heading-02 inner-section-heading">Primary</h3>
        <div class="colors">
          <div class="color" data-variant="primary">
            <div class="color-swatch"></div>
            <p class="copy-01">--default-color</p>
          </div>
        </div>
      </div>
      <div class="content-inner-section">
        <h3 class="heading-02 inner-section-heading">Primary Colors</h3>
        <div class="colors">
          <div class="color-wrapper">
            <div class="color" data-variant="blueShade1">
              <div class="color-swatch"></div>
              <p class="copy-01">-color-dark-blue</p>
            </div>
            <div class="color" data-variant="blueShade2">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-light-blue</p>
            </div>
          </div>
          <div class="color-wrapper">
            <div class="color" data-variant="whiteShade1">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-white</p>
            </div>
            <div class="color" data-variant="whiteShade2">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-light-grey</p>
            </div>
          </div>
          <div class="color-wrapper">
            <div class="color" data-variant="grayShade1">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-grey</p>
            </div>
            <div class="color" data-variant="grayShade2">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-dark-gray</p>
            </div>
          </div>
          <div class="color-wrapper">
            <div class="color" data-variant="blackShade1">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-black</p>
            </div>
            <div class="color" data-variant="blackShade2">
              <div class="color-swatch"></div>
              <p class="copy-01">--color-dark</p>
            </div>
          </div>
        </div>
