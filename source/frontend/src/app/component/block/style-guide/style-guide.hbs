      <div class="content-inner-section">
        <h3 class="heading-04 inner-section-heading">Text Colours</h3>
        <div class="colors">
          <div class="color" data-variant="whiteShade1">
            <div class="color-swatch"></div>
            <p class="copy-01">White</p>
          </div>
          <div class="color" data-variant="blackShade1">
            <div class="color-swatch"></div>
            <p class="copy-01">Black</p>
          </div>
        </div>
      </div>
      <div class="content-inner-section">
        <h3 class="heading-04 inner-section-heading">Gradient Colours</h3>
        <div class="colors">
          <div class="color" data-variant="darkBlueGradient">
            <div class="color-swatch"></div>
            <p class="copy-01">Dark Blue</p>
          </div>
          <div class="color" data-variant="lightBlueGradient">
            <div class="color-swatch"></div>
            <p class="copy-01">Light Blue</p>
          </div>
