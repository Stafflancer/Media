    </section>
    <section class="content-section">
      <h2 class="heading-02">Typography</h2>
      <p class="copy-01">H1</p>
      {{> general/heading/heading h1 class="heading-1" }}
      <p class="copy-01">H2</p>
      {{> general/heading/heading h2 class="heading-2" }}
      <p class="copy-01">H3</p>
      {{> general/heading/heading h3 class="heading-3" }}
