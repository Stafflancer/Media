<section class="style-guide" data-component="style-guide" data-scroll-component>
  <div class="block-wrapper">
    <header>
      <h1 class="heading-01">Style <em>Guide</em></h1>
      {{> general/logo className='brand-midea' }}
      {{> general/logo fill='#000' className='brand-midea' }}
    </header>
    <section class="content-section">
      <h2 class="heading-02">Colours</h2>
      <div class="content-inner-section">
        <h3 class="heading-02 inner-section-heading">Primary</h3>
