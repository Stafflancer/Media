<div data-component="c16-technology-and-innovation">
  <div class="c16-technology-and-innovation__video">
    <div class="c16-technology-and-innovation__video-box">
      <div class="c16-technology-and-innovation__video-slogan">
        {{> general/heading/heading slogan class="heading-6" }}
      </div>
      <div class="c16-technology-and-innovation__video-play">
        <div class="c16-technology-and-innovation__video-play-button">
          {{> cta/cta-gradient/cta-gradient icon="icon-play" class="sastat"}}
        </div>
        <div class="c16-technology-and-innovation__video-play-button pause">
          {{> cta/cta-gradient/cta-gradient icon="icon-pause" class="pause"}}
        </div>
        <div class="c16-technology-and-innovation__user-name">
          <p class="copy large">{{userName}}</p>
        </div>
      </div>
      <div class="c16-technology-and-innovation__video-progress-bar"></div>
      <div class="c16-technology-and-innovation__video-audio">
        <audio src="{{map3Src}}" class="c16-technology-and-innovation__audio"></audio>
      </div>
    </div>
    <div class="c16-technology-and-innovation__video-image">
      <img src="{{avatarSrc}}" alt="avatar">
    </div>
  </div>
  <div class="c16-technology-and-innovation__container ">
    <div class="container">
      <div class="row">
        <div class="c16-technology-and-innovation__left col-12 col-md-6">
          <div class="c16-technology-and-innovation__title">
            {{> general/heading/heading h1 class="heading-1" }}
          </div>
          <div class="c16-technology-and-innovation__content">
            <div class="c16-technology-and-innovation__label">
              <p class="copy large">{{intro.label}}</p>
            </div>
            <div class="c16-technology-and-innovation__control">
              <div class="c16-technology-and-innovation__description">
                <p class="copy large">{{intro.description}}</p>
              </div>
              <div class="c16-technology-and-innovation__button">
                {{> cta/cta-border/cta-border intro.subTitle }}
              </div>
            </div>
          </div>
        </div>
        <div class="c16-technology-and-innovation__right col-12 col-md-6">
          <div class="c16-technology-and-innovation__image">
            <img src="{{intro.imgSrc}}" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>